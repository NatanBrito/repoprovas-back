// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model tests {
  id                  Int    @id @default(autoincrement())
  name                String
  pdfUrl              String
  categoryId          Int
  teacherDisciplineId Int

  Categories          categories          @relation(fields: [categoryId], references: [id])
  TeachersDisciplines teachersDisciplines @relation(fields: [teacherDisciplineId], references: [id])
}

model categories {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  tests tests[]
}

model teachersDisciplines {
  id           Int         @id @default(autoincrement())
  teacherId    Int
  disciplineId Int
  tests        tests[]
  Teachers     teachers    @relation(fields: [teacherId], references: [id])
  Disciplines  disciplines @relation(fields: [disciplineId], references: [id])
}

model teachers {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  teachersDisciplines teachersDisciplines[]
}

model disciplines {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  termId              Int
  teachersDisciplines teachersDisciplines[]
  Terms               terms                 @relation(fields: [termId], references: [id])
}

model terms {
  id          Int           @id @default(autoincrement())
  number      Int           @unique
  disciplines disciplines[]
}
